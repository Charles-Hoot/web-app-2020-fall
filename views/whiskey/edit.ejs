<!--
*  Whiskey edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit a whiskey.
*
* @author Stephen Burke <burke.stephenpaul@gmail.com>
-->

<div class="card">
    <div class="card-header">
      Edit Whiskey
    </div>
    <div class="card-body">
      <form action="/whiskey/save/<%= whiskey.id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= whiskey.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="age">Age:</label>
          <input type="number" class="form-control" id="age" name="age" value="<%= whiskey.age %>" min=1 max=100 step=1 default=2
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= whiskey.isScotch %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Scotch?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>