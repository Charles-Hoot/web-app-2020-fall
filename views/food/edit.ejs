-->

<div class="card">
    <div class="card-header">
      Edit food
    </div>
    <div class="card-body">
      <form action="/food/save/<%= food.id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= food.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="pricePerLB">pricePerLB:</label>
          <input type="number" class="form-control" id="pricePerLB" name="pricePerLB" value="<%= food.pricePerLB %>" min=1 max=100 step=1 default=2
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= food.eisMeat %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Meat?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>