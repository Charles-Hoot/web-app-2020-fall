<div class="card">
    <div class="card-header">
      Edit Ship
    </div>
    <div class="card-body">
      <form action="/ship/save/<%= ship.id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= ship.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="guns">Guns:</label>
          <input type="number" class="form-control" id="guns" name="guns" value="<%= ship.guns %>" min=0 max=140 step=1 default=14
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= ship.isFictional %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Fictional?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>