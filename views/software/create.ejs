<!--
*  Software create view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpfirstReleased to create a new software.
*
* @author Joseph Dobelmann <s536997@nwmissouri.edu>
-->

<% if (software && software.error) { %>
  <div class="alert alert-danger" role="alert"><%- JSON.stringify(software.error) %></div>
  <% } %>

<div class="card">
  <div class="card-header">
    Add Software
  </div>
  <div class="card-body">
    <form action="/software/save" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= software.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="firstReleased">First Released:</label>
        <input type="number" class="form-control" id="firstReleased" name="firstReleased" value="<%= software.firstReleased %>" min=1969 max=2021 step=1 default=1969
          autocomplete="off">
      </div>
      <br>
      <!-- Checked checkbox -->
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox" value="<%= software.isOpenSource %>" checked />
        <label class="form-check-label" for="checkbox">
          Is Open Source?
        </label>
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
      </div>
    </form>
  </div>
</div>