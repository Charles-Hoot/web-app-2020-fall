<% if (company.error) { %>
  <div class="alert alert-danger" role="alert"><%- company.error %></div>
  <% } %>
  
  <div class="card-body">
  
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Founded</th>
          <th scope="col">IsPublic</th>
          <th >Action</th>
        </tr>
      </thead>
      <tbody>
  
        <tr>
          <th scope="row"><%= company.id %></th>
          <td><%= company.name%></td>
          <td><%= company.founded%></td>
          <td><%= company.isPublic%></td>
          <td>
            <a class="btn btn-success edit" href="/company">Done</a>
          </td>
        </tr>
  
      </tbody>
    </table>
  