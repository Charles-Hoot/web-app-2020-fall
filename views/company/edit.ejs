<!--
*  Company edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpfounded to edit a company.
*
* @author Chandler Wright <s534776@nwmissouri.edu>
-->

<div class="card">
  <div class="card-header">
    Edit Company
  </div>
  <div class="card-body">
    <form action="/company/save/<%= company.id %>" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= company.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="founded">Founded:</label>
        <input type="number" class="form-control" id="founded" name="founded" value="<%= company.founded %>" min=1 max=2020 step=1 default=2019
          autocomplete="off">
      </div>
      <br>
      <!-- Checked checkbox -->
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox" value="<%= company.isPublic %>" checked />
        <label class="form-check-label" for="checkbox">
          Is Public?
        </label>
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
      </div>
    </form>
  </div>
</div>