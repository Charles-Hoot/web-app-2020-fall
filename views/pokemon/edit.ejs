-->

<div class="card">
    <div class="card-header">
      Edit Pokemon
    </div>
    <div class="card-body">
      <form action="/pokemon/save/<%= pokemon.id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= pokemon.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="generation">Generation:</label>
          <input type="number" class="form-control" id="generation" name="generation" value="<%= pokemon.age %>" min=1 max=8 step=1 default=2
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= pokemon.isStarter %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Starter?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>