<% if (animal.error) { %>
    <div class="alert alert-danger" role="alert"><%- animal.error %></div>
    <% } %>
    
    <div class="card-body">
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">LifeSpan</th>
            <th scope="col">IsPet</th>
            <th width=>Action</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <th scope="row"><%= animal.id %></th>
            <td><%= animal.name%></td>
            <td><%= animal.lifeSpan%></td>
            <td><%= animal.isPet%></td>
            <td>
              <form action="/animal/delete/<%=animal.id%>" method="post">
                <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are You sure?')"/>
              </form>
            </td>
          </tr>
    
        </tbody>
      </table>
    